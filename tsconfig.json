{
  "compilerOptions": {
    "module": "commonJS",
    "removeComments": true,
    "preserveConstEnums": true,
    "target": "ES2021",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "allowJs": true,
    "checkJs": true
  },
  "include": ["src/**/*.ts", "src/config/configuration.js"],
  "exclude": ["node_modules"]
}
